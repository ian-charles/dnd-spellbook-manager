{
  "name": "dnd-spellbook-app",
  "version": "1.0.0",
  "description": "D&D 5e Spellbook Manager - Progressive Web App",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:spells": "node scripts/build-spells.js",
    "setup:hooks": "node scripts/setup-git-hooks.js",
    "prepare": "npm run setup:hooks",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run src/services"
  },
  "scripts-info": {
    "dev": "Start the development server",
    "build": "Build the project for production",
    "build:spells": "Generate spell data from source files",
    "setup:hooks": "Install git hooks for code quality checks",
    "prepare": "Run setup:hooks automatically after install",
    "preview": "Preview the production build locally",
    "test": "Run all tests",
    "test:ui": "Run tests with UI interface",
    "test:coverage": "Run tests and generate coverage report",
    "test:unit": "Run unit tests only"
  },
  "dependencies": {
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.6.0",
    "cross-env": "^10.1.0",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.6.0",
    "workbox-window": "^7.0.0"
  }
}
