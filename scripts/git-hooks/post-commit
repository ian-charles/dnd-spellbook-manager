#!/bin/bash

# Post-commit hook to automatically push changes to remote
echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "Pushing changes to remote..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"

# Check if remote exists
if ! git remote | grep -q .; then
  echo "ℹ️  No remote repository configured. Skipping push."
  exit 0
fi

git push

if [ $? -eq 0 ]; then
  echo "✅ Changes pushed successfully"
else
  echo "⚠️  Push failed - you may need to pull first or resolve conflicts"
  echo "Run 'git push' manually when ready"
fi
